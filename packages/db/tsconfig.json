{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@meltstudio/tsconfig/node18.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/db": ["./src"],
      "@/db/*": ["./src/*"],
      "@/logger": ["../logger/src"],
      "@/common/*": ["../common/src/*"]
    }
  },
  "include": [
    "src",
    "fixtures",
    "drizzle.config.ts",
    "tests",
    "algolia",
    "jest.config.ts",
    "vector"
  ]
}
